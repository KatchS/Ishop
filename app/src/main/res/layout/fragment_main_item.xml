<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="48dp">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@android:drawable/ic_delete"
        android:id="@+id/main_fragment_item_delete_button"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="7"
        android:text="price"
        android:textSize="30sp"
        android:maxLines="1"
        android:gravity="center"
        android:id="@+id/main_fragment_item_price_text_view"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:text="name"
        android:textSize="24sp"
        android:gravity="center"
        android:maxLines="1"
        android:id="@+id/main_fragment_item_name_text_view"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:id="@+id/main_fragment_item_picture_image_view"
        android:src="@android:drawable/picture_frame"/>

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="13dp"
        android:id="@+id/main_fragment_favorite_radio_button"/>

</LinearLayout>